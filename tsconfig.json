{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "target": "ES2015",
		"module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm/",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "lib":["dom"]
	},
  "include": ["src"],
  "exclude": ["node_modules"]
}
